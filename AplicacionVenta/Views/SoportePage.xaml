<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionVenta.Views.SoportePage"
             xmlns:models="clr-namespace:AplicacionVenta.Models"
             Title="SoportePage">

    <ContentPage.Resources>
        <models:SoporteData x:Key="data" VisitasPendientes="10"/>
    </ContentPage.Resources>
    
    <VerticalStackLayout>
        <Label Text="{Binding Source={StaticResource data}, Path=VisitasPendientes, Mode=OneWay}" FontSize="Large"/>

        <Button Text="Actualizar" Clicked="Button_Clicked" />
        
    </VerticalStackLayout>

</ContentPage>